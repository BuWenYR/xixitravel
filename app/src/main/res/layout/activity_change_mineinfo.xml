<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/setting_header"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/change_info_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:contentDescription="@string/setting_back"
            android:src="@drawable/back_black_topbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/base_info"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:background="@color/setting_header_divider" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/setting_divider" />

    <RelativeLayout
        android:id="@+id/fl_person_data_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="头像"
            android:textColor="@color/sl_artical_detail"
            android:textSize="16sp" />

        <ImageView

            android:id="@+id/iv_me_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_travel" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_nickname"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/nickname"
            android:textColor="@color/sl_artical_detail"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="51dp"
            android:layout_toRightOf="@+id/nick"
            android:textColor="@color/content_color"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/arrow"
            android:src="@drawable/click_see" />
    </RelativeLayout>

    <View

        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/setting_divider" />

    <RelativeLayout
        android:id="@+id/set_sex"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/seex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/sex"
            android:textColor="@color/sl_artical_detail"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="51dp"
            android:layout_toRightOf="@+id/seex"
            android:text="男"
            android:textColor="@color/content_color"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/arrow"
            android:src="@drawable/click_see" />
    </RelativeLayout>

    <View

        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/setting_divider" />

    <RelativeLayout
        android:id="@+id/set_signature"
        android:layout_width="fill_parent"
        android:layout_height="79dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/signa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/signature"
            android:textColor="@color/sl_artical_detail"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/signa"
            android:text="孤单是一个人的狂欢"
            android:textColor="@color/content_color"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/arrow"
            android:src="@drawable/click_see" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/setting_divider" />

    <RelativeLayout
        android:id="@+id/user_rel_accountPW"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账户密码"
            android:textColor="@color/sl_artical_detail"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/click_see" />

    </RelativeLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/title_bar_bg"
        android:text="@string/exit"
        android:textColor="#fff"
        android:textSize="16sp" />
</LinearLayout>
